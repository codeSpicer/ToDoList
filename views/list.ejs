<%- include('header'); -%>

  <body>

    <div class="box" id="heading">
      <h1>
        <%= listTitle%>
      </h1>
    </div>

    <div class="box">
      <% for(let i=0 ;i < newListItem.length ;i++) {%>
        <form action="/delete" method="post">
        <div class="item">
          <input name="completed" type="checkbox" value="<%= newListItem[i]._id %>" onchange="this.form.submit()">
          <p>
            <%= newListItem[i].name %>
          </p>
        </div>
        </form>
        <% } %>

          <div>
            <form class="item" action="<% listType %> " method="post">

              <input type="text" name="newItem" placeholder="New task">
              <button type="submit">+</button>
            </form>
          </div>
    </div>



  </body>

  </html>